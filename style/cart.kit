<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>корзина</title>
    <link rel="stylesheet" href="style/css/style.css">
</head>

<body>
    <div id="app">
        <!-- @import header.html -->

        <div class="title-page">
            <div class="container">
                <p class="p-title-page">SHOPPING CART</p>
            </div>
        </div>

        <div class="cart flex container">

            <div class="cart-left">

                <cart ref="cart"> <!-- Корзина товаров --> </cart>

                <div class="flex">
                    <button class="cart-But" type="#">CLEAR SHOPPING CART</button>
                    <button class="cart-But" type="#">CONTINUE SHOPPING</button>
                </div>
            </div>

            <div class="cart-right">
                <div class="right-block-top">
                    <form class="input-adress" action="#">
                        <p class="rbt-h">SHIPPING ADRESS</p>
                        <input class="input" type="ADRESS" placeholder="Bangladesh"><br>
                        <input class="input" type="ADRESS" placeholder="State"><br>
                        <input class="input" type="ADRESS" placeholder="Postcode / Zip"><br>
                    </form>
                    <button class="cart-ButRight" type="#">GET A QUOTE</button>
                </div>

                <div class="pay">
                    <form action="#">
                        <p class="p-pay">SUB TOTAL ${{carttotal}} </p>
                        <p class="p2-pay"> GRAND TOTAL ${{carttotal}} </p>
                    </form>
                    <hr>

                    <button class="but-pay" type="#">PROCEED TO CHECKOUT</button>
                </div>
            </div>
        </div>
    </div>

    <!-- @import footer.html -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="JavaScript/Coponent_Cart.js"></script>
    <script src="JavaScript/Component_Katalog.js"></script>
    <script src="JavaScript/main.js"></script>
</body>

</html>